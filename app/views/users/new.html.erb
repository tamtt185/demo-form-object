<div class="container">
  <h1> Tạo User sử dụng nested attributes </h1>
  <%= form_for @user, html: {class: "form-horizontal"} do |f| %>
    <%= render "shared/errors_messages", object: f.object %>

    <div class="form-group">
      <%= f.label :name, t(".user_name"), class: "col-md-2 control-label" %>
      <%= f.text_field :name %>
    </div>
    <div class="form-group">
      <%= f.label :email, t(".email"), class: "col-md-2 control-label" %>
      <%= f.text_field :email %>
    </div>
      <div class="form-group">
      <%= f.label :password, t(".password"), class: "col-md-2 control-label" %>
      <%= f.text_field :password %>
    </div>

    <%= f.fields_for :company do |ff| %>
    <div class="form-group">
      <%=ff.label :name, t(".company_name"), class: "col-md-2 control-label" %>
      <%= ff.text_field :name %>
    </div>
    <div class="form-group">
      <%= ff.label :address, t(".company_address"), class: "col-md-2 control-label" %>
      <%= ff.text_field :address %>
    </div>
    <% end %>
    <%= f.submit %>
  <% end %>
</div>
